{% extends 'template.html.twig' %}

{% block title %}Détail Candidat{% endblock %}

{% block PageTitle %}
Détails Candidat
{% endblock %}

{% block body %}

{# <a href="{{ asset('uploads/pictures/' ~ candidats.pictureFilename) }}">Voir la photo</a> #}
<p class="h3"><span class="text-capitalize">{{ candidat.firstname }} {{ candidat.lastname }}</span> a {{ candidat.age }}
    ans</p>

<div class="mt-5">
    <div class="row">

        {% if candidat.pictureFilename %}
        <div class="col-sm-6">
            {# <a href="{{ asset('uploads/pictures/' ~ candidat.pictureFilename) }}">Voir la photo</a> #}
            <img class="w-100 p-5 bg-light" src="{{ asset('uploads/pictures/' ~ candidat.pictureFilename) }}" alt="">
        </div>
        {% endif %}


        <div class="col-sm-6">
            <div>
                <h3>Job : {{candidat.jobs}}</h3>
            </div>
            <div class="mt-5">
                <h3>Hobbies</h3>
                <ul class="list-group"></ul>
                {% for hobby in candidat.hobbies %}

                <li class="list-group-item">{{hobby}}</li>

                {% else %} N'a pas choisi de Hobby
                {% endfor %}
                </ul>
            </div>
        </div>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"> Contacter
            le candidat
        </button>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Contacter le candidat</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(candidat_contact) }}
                    {{form_row(candidat_contact.email, {'attr': {'value': from}})}}
                    {{form_row(candidat_contact.subject, {'attr': {'value': 'Opportunité de poste'}})}}
                    {{ form_end(candidat_contact) }}
                </div>
                <!-- <div class="modal-footer">
        </div> -->
            </div>
        </div>
    </div>













    {% endblock %}