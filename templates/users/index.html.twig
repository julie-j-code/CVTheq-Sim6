{% extends 'template.html.twig' %}

{% block title %}Utilisateurs inscrits{% endblock %}

{% block PageTitle %} Utilisateurs inscrits
    
{% endblock %}

{% block body %}



    <table class="table table-striped text-capitalize">

        <thead>
            <tr>
                <th class="scop">Id</th>
                <th class="scop">Email</th>
                {# <th class="scop">Pr√©nom</th> #}
            </tr>

        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td class="scop">{{user.id}}</td>
                <td class="scop">{{user.email}}</td>
                {# <td class="scop">{{user.lastname}}</td> #}
            </tr>
            {% endfor %}

        </tbody>
    </table>

    <div class="alert alert-info">
        <p>Total des utilisateurs : {{users | length}}</p>
    </div>

{% endblock %}